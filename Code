#include <Servo.h>
Servo LWall;
Servo RWall;
Servo Paper;
Servo Calcifer;

int LWallPin = 10;
int RWallPin = 9;
int PaperPin = 8;
int CalciferPin = 7;

int LedPin =6;


//Button A activates LED behind door for Howl

const int buttonAPin=2; //chalk
int buttonAState=0;
int lastButtonAState=0;
bool A=false;

//button B activates Calcifer turning and paper falling
const int buttonBPin=3;
int buttonBState=0;
int lastButtonBState=0;
bool B=false;

//button C activates servo for left wall paper
const int buttonCPin=4;
int buttonCState=0;
int lastButtonCState=0;
bool C=false;

//button D activates right wall turning
const int buttonDPin=5;
int buttonDState=0;
int lastButtonDState=0;
bool D=false;






void setup() {
  pinMode(buttonAPin,INPUT);
  pinMode(buttonBPin,INPUT);
  pinMode(buttonCPin,INPUT);
  pinMode(buttonDPin,INPUT);
  pinMode(buttonEPin,INPUT);
pinMode(LedPin, OUTPUT);
     digitalWrite(LedPin, HIGH);
  LWall.attach(LWallPin);
  pinMode(LWallPin,INPUT);
  RWall.attach(RWallPin);
  pinMode(RWallPin,INPUT);
  Paper.attach(PaperPin);
  pinMode(PaperPin,INPUT);
  Calcifer.attach(CalciferPin);
  pinMode(CalciferPin,INPUT);
  Serial.begin(9600);
  Serial.println("Start Part A");
}

void loop() {
buttonAState= digitalRead(buttonAPin);

if (buttonAState != lastButtonAState) { 
  if (buttonAState==HIGH) {  //Chalk is placed, Led behind door activates
    A=true;
    digitalWrite(LedPin, LOW);
  }else{
    digitalWrite(LedPin, HIGH);
  }
    Serial.println("Start Part B")
  }
if (A ==true) { //Howl is placed, activates Cal and paper
buttonBState= digitalRead(buttonBPin);
if(buttonBState !=lastButtonBState){
if (buttonBState==HIGH){
B=true;
digitalWrite(LedPin, HIGH);
//SERVO CODE FOR CALCIFER
if (digitalRead(CalciferPin)==HIGH){
Calcifer.write(180); //Calcifer turns bigger
}else{
Calcifer.write(0);
}
//SERVO CODE FOR PAPER
if (digitalRead(PaperPin)==HIGH){
Paper.write(90);
}else{
Paper.write(0);
}
}
}
}
if (B ==true) {
buttonCState= digitalRead(buttonCPin);
if(buttonCState !=lastButtonCState){
if (buttonCState==HIGH){
C=true;
//SERVO CODE FOR LEFT WALL
if (digitalRead(LWallPin)==HIGH){
LWall.write(90);
}else{
LWall.write(0);
}
}
}
}
if (C ==true) {
buttonDState= digitalRead(buttonDPin);
if(buttonDState !=lastButtonDState){
if (buttonDState==HIGH){
D=true;


//SERVO CODE FOR LEFT WALL
(digitalRead(LWallPin)==HIGH){
LWall.write(90);
}else{
LWall.write(0);
}
}
}
}
if (D ==true) {
buttonEState= digitalRead(buttonEPin);
if(buttonEState !=lastButtonEState){
if (buttonEState==HIGH){
E=true;

//SERVO CODE FOR RIGHT WALL
if (digitalRead(RWallPin)==HIGH){
RWall.write(90);
}else{
RWall.write(0);
}
}
}
}
if (D==true) {
  Serial.println("The End!");
}
lastButtonAState= buttonAState;
lastButtonBState= buttonBState;
lastButtonCState= buttonCState;
lastButtonDState= buttonDState;
}



